{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": ["node_modules", "./dist"],
  "include": [
    "**/*.ts"
  ],
  "ts-node": {
    "files": true
  }
}
  